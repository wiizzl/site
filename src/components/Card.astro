---
import { formatDate } from "@/lib/utils";

interface Props {
  href: string;
  name: string;
  date: Date;
}

const { href, name, date } = Astro.props;
---

<div class="max-w-1/3">
  <a href={href}>
    <div class="hover:rounded-lg hover:bg-muted/50 transition-colors p-3 text-muted-foreground">
      <h2 class="line-clamp-1">{name}</h2>
      <p class="capitalize text-xs">{formatDate(date)}</p>
    </div>
  </a>
  <div class="border-b mt-2"></div>
</div>
