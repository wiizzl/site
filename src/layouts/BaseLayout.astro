---
import "../styles/global.css";

import info from "@/config/info.json";

interface Props {
  title?: string;
}

const props = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={info.keywords} />
    <meta name="author" content={`${info.name}, ${info.mail}`} />
    <meta name="copyright" content={info.name} />
    <meta name="description" content={info.description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={info.name} />
    <meta property="og:description" content={info.description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={`${Astro.url.origin}/opengraph-image.png`} />
    <meta property="og:site_name" content={info.name} />
    <meta name="twitter:card" content="summary_large_image" />

    <title>{props.title ? props.title + " - " + info.name : info.name}</title>
  </head>
  <body class="selection:bg-primary selection:text-accent-foreground antialiased">
    <main class="mx-auto h-full w-full max-w-screen-2xl px-4 py-10 md:px-10 md:py-40 lg:px-52 xl:px-96">
      <slot />
    </main>
  </body>
</html>
