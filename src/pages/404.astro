---
import Layout from "@/layouts/Layout.astro";

// This 404 page is inspired by Franky47's one.
// https://github.com/franky47/francoisbest.com/blob/next/packages/francoisbest.com/src/app/not-found.tsx
---

<Layout>
  <section class="mt-32 space-y-4 text-center">
    <h2 class="text-8xl font-bold text-secondary">404</h2>
    <div>
      <h3 class="my-4 text-2xl font-semibold text-primary">Page not found</h3>
      <p class="text-sm text-muted-foreground">Sorry, there's nothing here.</p>
    </div>
    <a href="/" class="hover:underline">Back to home</a>
  </section>
</Layout>
